{
  "name": "s3-bucket-service",
  "version": "1.0.0",
  "description": "S3 bucket service for audio file uploads with MongoDB integration",
  "main": "src/server.js",
  "scripts": {
    "start": "node src/server.js",
    "dev": "nodemon src/server.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "setup": "npm install && npm run create-dirs && npm run copy-env",
    "create-dirs": "node -e \"const fs = require('fs'); if (!fs.existsSync('logs')) fs.mkdirSync('logs', { recursive: true });\"",
    "copy-env": "node -e \"const fs = require('fs'); if (!fs.existsSync('.env.local')) fs.copyFileSync('.env', '.env.local');\""
  },
  "keywords": ["s3", "upload", "audio", "mongodb", "presigned-url"],
  "author": "Healthcare Team",
  "license": "MIT",
  "dependencies": {
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "helmet": "^7.1.0",
    "morgan": "^1.10.0",
    "dotenv": "^16.3.1",
    "aws-sdk": "^2.1490.0",
    "mongoose": "^8.0.3",
    "joi": "^17.11.0",
    "multer": "^1.4.5-lts.1",
    "uuid": "^9.0.1",
    "winston": "^3.11.0"
  },
  "devDependencies": {
    "nodemon": "^3.0.2",
    "jest": "^29.7.0",
    "supertest": "^6.3.3",
    "mongodb-memory-server": "^9.1.3"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}